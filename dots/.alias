# quick navigation and modification
alias reload='. ~/.zshrc'
alias .zshrc='atom ~/.zshrc'
alias .gitconfig='atom ~/.gitconfig'
alias .gituser='atom ~/.gituser'
alias .alias='atom ~/.alias'
alias .nvmrc='atom ~/.nvmrc'
alias .osx='atom ~/.osx'
alias .packages='atom ~/.packages'
alias snippets='atom ~/.atom/snippets.cson'
alias dev='atom ~/projects/dev-resources/README.md'
alias draft='atom ~/Library/Mobile\ Documents/com~apple~CloudDocs/Docs/draft.md'
alias note='atom ~/Library/Mobile\ Documents/com~apple~CloudDocs/Docs/note.md'

# system related
alias ip="dig +short myip.opendns.com @resolver1.opendns.com"
alias lock="pmset sleepnow"
alias show-hidden="defaults write com.apple.finder AppleShowAllFiles -bool true && killall Finder"
alias hide-hidden="defaults write com.apple.finder AppleShowAllFiles -bool false && killall Finder"

# application shorthand related
alias gu='./node_modules/.bin/gulp'
alias lint='./node_modules/.bin/eslint'
alias da='direnv allow'
alias x='gitx'
alias g=git

# npm related
alias n='npm'
alias nr='npm run'
alias save='npm i --save'
alias save-dev='npm i --save-dev'
alias save-g='npm i -g'

# node related
alias ni='node-inspector --preload=false &'
alias nd='node --debug'
alias node_modules='mv node_modules node_modules_$(date +%s)'
